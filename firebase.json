{
  "hosting": {
    "public": "dist/pokedex-angular/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/api/v2/everything",
        "destination": "https://newsapi.org/v2/everything",
        "type": 200
      },
      {
        "source": "/api",
        "destination": "https://newsapi.org",
        "type": 200
      }
    ]
  }
}
